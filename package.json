{
  "name": "claude-hub",
  "version": "1.0.0",
  "description": "Central hub for syncing and managing multiple Claude Code accounts",
  "main": "dist/index.js",
  "bin": {
    "hub": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:and:link": "npm run build && sudo npm link",
    "unlink": "sudo npm unlink -g claude-hub",
    "start": "node dist/index.js",
    "sync": "node dist/index.js --sync",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude",
    "cli",
    "sync"
  ],
  "author": "Claude Roy",
  "license": "MIT",
  "dependencies": {
    "node-pty": "1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
